@model IEnumerable<Restaurant_Reservation_Client.Models.SeatsViewModel>
@{
    ViewData["Title"] = "Index";
}

<div class="container text-center">
    <div class="row">
        <div class="col">
            <h1>今日開放訂位的用餐時段=)</h1>
            <h3>(時段 : 開放座位數)</h3>
            @foreach (var item in Model)
            {
                @* @if (int.Parse(item.Period[0..2]) - DateTime.Now.Hour > 1)
                {
                    <h2>@Html.DisplayFor(modelItem => item.Period) : @Html.DisplayFor(modelItem => item.RemainSeats)</h2>
                } *@
                <h2>@Html.DisplayFor(modelItem => item.Period) : @Html.DisplayFor(modelItem => item.RemainSeats)</h2>
            }
            <h4>(若無顯示時段, 表示不再開放今天的訂位, 訂位時日期請從明日選起)</h4>
        </div>
    </div>
    <div class="row">
        <div class="col">
            <p>
                <a asp-action="MakeRes" class="btn btn-warning">我要訂位</a>
            </p>
        </div>
    </div>
    <div class="row">
        <div class="col">
            <p>
                <a asp-action="Search" class="btn btn-info">訂位修改/刪除</a>
            </p>
        </div>
    </div>
</div>