@model IEnumerable<Restaurant_Reservation_Client.Models.SeatsViewModel>
@{
    ViewData["Title"] = "Index";
}

<div class="container text-center">
    <div class="row">
        <div class="col">
            @foreach (var item in Model)
            {
                <h2>@Html.DisplayFor(modelItem => item.Period) : @Html.DisplayFor(modelItem => item.RemainSeats) 人</h2>
            }
        </div>
    </div>
    <div class="row">
        <div class="col">
            <p>
                <a asp-action="MakeRes" class="btn btn-warning">我要訂位</a>
            </p>
        </div>
    </div>
    <div class="row">
        <div class="col">
            <p>
                <a asp-action="Search" class="btn btn-info">訂位修改/刪除</a>
            </p>
        </div>
    </div>
</div>