@model Restaurant_Reservation_Client.Models.ReservationViewModel
@inject Microsoft.AspNetCore.Http.IHttpContextAccessor accessor
@{
    ViewData["Title"] = "修改訂位";
    var dateOfToday = DateTime.Now.ToString("yyyy-MM-dd");
}

<h1 class="text-center fw-bold text-primary m-4">修改訂位</h1>

<div class="m-4" style="text-align:center">
    <a asp-controller="Reservation" asp-action="ChangeDate" data-bs-toggle="modal" data-bs-target="#changeDateModal"
       class="btn btn-info mx-2">按我重選日期</a>
    <div class="modal fade" id="changeDateModal" tabindex="-1" aria-labelledby="changeDateModalLabel" aria-hidden="true">
        <div class="modal-dialog">
            <div class="modal-content">
                <div class="modal-body">
                    <form asp-action="ChangeDate">
                        <div class="form-group m-2">
                            <label asp-for="BookingDate" class="control-label"></label>
                            <input asp-for="BookingDate" class="form-control" min="@dateOfToday" value="@dateOfToday" />
                            <span asp-validation-for="BookingDate" class="text-danger"></span>
                        </div>
                        <button type="submit" class="btn btn-primary text-center" data-bs-dismiss="modal">選好日期按我</button>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

<div class="row justify-content-center">
    <div class="col-md-4">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <h5 class="text-danger">@ViewBag.RepeatError</h5>
            <div class="form-group m-2">
                <label asp-for="BookingDate" class="control-label"></label>
                <input asp-for="BookingDate" class="form-control" readonly />
                <span asp-validation-for="BookingDate" class="text-danger"></span>
            </div>
            <div class="form-group m-2">
                <label asp-for="CustomerName" class="control-label"></label>
                <input asp-for="CustomerName" class="form-control" />
                <span asp-validation-for="CustomerName" class="text-danger"></span>
            </div>
            <div class="form-group m-2">
                <label asp-for="Phone" class="control-label"></label>
                <input asp-for="Phone" class="form-control" />
                <span asp-validation-for="Phone" class="text-danger"></span>
            </div>
            <h5 class="text-danger">@ViewBag.RemainSeatError</h5>
            <div class="form-group m-2">
                <label asp-for="arrivalTimeId" class="control-label"></label>
                <select asp-for="arrivalTimeId" class="form-select" asp-items="@ViewBag.Periods">
                    <option selected>請選擇時段</option>
                </select>
                <span asp-validation-for="arrivalTimeId" class="text-danger"></span>
            </div>
            <div class="form-group m-2">
                <label asp-for="SeatRequirement" class="control-label"></label>
                <input asp-for="SeatRequirement" type="number" class="form-control" />
                <span asp-validation-for="SeatRequirement" class="text-danger"></span>
            </div>
            <h5 class="text-danger">@ViewBag.ChildSeatError</h5>
            <div class="form-group m-2">
                <label asp-for="ChildSeat" class="control-label"></label>
                <input asp-for="ChildSeat" type="number" class="form-control" />
                <span asp-validation-for="ChildSeat" class="text-danger"></span>
            </div>
            <div class="form-group text-center m-4">
                <input type="submit" value="儲存修改" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div style="text-align:center">
    <a asp-action="Index"
       class="btn btn-warning m-2">回首頁</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
