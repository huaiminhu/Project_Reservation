@model Restaurant_Reservation_Client.Models.ReservationViewModel
@inject Microsoft.AspNetCore.Http.IHttpContextAccessor accessor
@{
    ViewData["Title"] = "修改訂位";
    var dateOfToday = DateTime.Now.ToString("yyyy-MM-dd");
    var changedDate = @DateTime.Parse(accessor.HttpContext.Session.GetString("ChangedDate")).ToString("yyyy-MM-dd");
}

<h1>修改訂位</h1>

<hr />

<a asp-controller="Reservation" asp-action="ChangeDate" data-bs-toggle="modal" data-bs-target="#changeDateModal"
   class="btn btn-info mx-2">按我重選日期</a>
<div class="modal fade" id="changeDateModal" tabindex="-1" aria-labelledby="changeDateModalLabel" aria-hidden="true">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-body">
                <form asp-action="ChangeDate">
                    <div class="form-group m-2">
                        <label asp-for="BookingDate" class="control-label"></label>
                        <input asp-for="BookingDate" class="form-control" min="@dateOfToday" value="@dateOfToday" />
                        <span asp-validation-for="BookingDate" class="text-danger"></span>
                    </div>
                    <button type="submit" class="btn btn-primary" data-bs-dismiss="modal">選好日期按我</button>
                </form>
            </div>
        </div>
    </div>
</div>

<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="BookingDate" class="control-label"></label>
                <input asp-for="BookingDate" type="date" class="form-control" value="@changedDate" readonly />
                <span asp-validation-for="BookingDate" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="CustomerName" class="control-label"></label>
                <input asp-for="CustomerName" class="form-control" />
                <span asp-validation-for="CustomerName" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Phone" class="control-label"></label>
                <input asp-for="Phone" class="form-control" />
                <span asp-validation-for="Phone" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="arrivalTimeId" class="control-label"></label>
                <select asp-for="arrivalTimeId" class="form-select" asp-items="@ViewBag.Periods">
                    <option selected>請選擇時段</option>
                </select>
                <span asp-validation-for="arrivalTimeId" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="SeatRequirement" class="control-label"></label>
                <input asp-for="SeatRequirement" type="number" class="form-control" />
                <span asp-validation-for="SeatRequirement" class="text-danger"></span>
            </div>
            @ViewBag.ChildSeatError
            <div class="form-group">
                <label asp-for="ChildSeat" class="control-label"></label>
                <input asp-for="ChildSeat" type="number" class="form-control" />
                <span asp-validation-for="ChildSeat" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="儲存修改" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">回首頁</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
