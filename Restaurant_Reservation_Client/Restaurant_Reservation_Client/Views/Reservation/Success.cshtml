@model Restaurant_Reservation_Client.Models.ReservationViewModel

@{
    ViewData["Title"] = "訂位完成";
}

<h1 class="text-center fw-bold text-success">你訂好了!</h1>

<div>
    <h4>訂位資訊</h4>
    <hr />
    <dl class="row">
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.BookingDate)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.BookingDate)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.arrivalTimeId)
        </dt>
        <dd class="col-sm-10">
            @ViewBag.Period
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.CustomerName)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.CustomerName)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Phone)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Phone)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.SeatRequirement)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.SeatRequirement)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.ChildSeat)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.ChildSeat)
        </dd>
    </dl>
</div>
<div>
    @Html.ActionLink("修改", "Edit", new { id = Model.Id }) |
    <a asp-action="Index">回首頁</a>
</div>
