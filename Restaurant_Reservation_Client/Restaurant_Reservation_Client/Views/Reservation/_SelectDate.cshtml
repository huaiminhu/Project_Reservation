@model Restaurant_Reservation_Client.Models.ReservationViewModel

@{
    var dateOfToday = DateTime.Now.ToString("yyyy-MM-dd");
}

<div class="modal fade" id="selectDateModal" tabindex="-1" aria-labelledby="selectDateLabel" aria-hidden="true">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-body">
                <form asp-action="SelectDate">
                    <div class="form-group m-2">
                        <label asp-for="BookingDate" class="control-label"></label>
                        <input asp-for="BookingDate" class="form-control" min="@dateOfToday" value="@dateOfToday" />
                        <span asp-validation-for="BookingDate" class="text-danger"></span>
                    </div>
                    <div class="form-group text-center m-4">
                        <button type="submit" class="btn btn-success" data-bs-dismiss="modal">再想想</button>
                    </div>
                </form>
        </div>
    </div>
</div>