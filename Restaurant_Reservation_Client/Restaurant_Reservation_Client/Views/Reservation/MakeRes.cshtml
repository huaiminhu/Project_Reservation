@model Restaurant_Reservation_Client.Models.ReservationViewModel
@inject Microsoft.AspNetCore.Http.IHttpContextAccessor accessor
@{
    ViewData["Title"] = "我要訂位";
    var dateOfToday = DateTime.Now.ToString("yyyy-MM-dd");
}

<h1 class="text-center fw-bold text-primary m-4">我要訂位</h1>

<div class="m-4" style="text-align:center">
    <a asp-controller="Reservation" asp-action="SelectDate" data-bs-toggle="modal" data-bs-target="#selectDateModal"
       class="btn btn-info mx-2 fw-bold">按我選擇日期</a>
    <div class="modal fade" id="selectDateModal" tabindex="-1" aria-labelledby="selectDateModalLabel" aria-hidden="true">
        <div class="modal-dialog">
            <div class="modal-content">
                <div class="modal-body">
                    <form asp-action="SelectDate">
                        <div class="form-group m-2">
                            <label asp-for="BookingDate" class="control-label"></label>
                            <input asp-for="BookingDate" class="form-control" min="@dateOfToday" value="@dateOfToday" />
                            <span asp-validation-for="BookingDate" class="text-danger"></span>
                        </div>
                        <button type="submit" class="btn btn-primary text-center" data-bs-dismiss="modal">選好日期按我</button>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

@if (accessor.HttpContext.Session.GetString("SelectedDate") != null)
{
    var selectedDate = @DateTime.Parse(accessor.HttpContext.Session.GetString("SelectedDate")).ToString("yyyy-MM-dd");
    <div class="row justify-content-center">
        <div class="col-md-4">
            <form asp-action="MakeRes">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <h5 class="text-danger">@ViewBag.RepeatError</h5>
                <div class="form-group m-2">
                    <label asp-for="BookingDate" class="control-label"></label>
                    <input asp-for="BookingDate" class="form-control" value="@selectedDate" readonly />
                    <span asp-validation-for="BookingDate" class="text-danger"></span>
                </div>
                <h5 class="text-danger">@ViewBag.RemainSeatError</h5>
                <div class="form-group m-2">
                    <label asp-for="arrivalTimeId" class="control-label"></label>
                    <select asp-for="arrivalTimeId" class="form-select" asp-items="@ViewBag.Periods">
                        <option selected>請選擇時段</option>
                    </select>
                    <span asp-validation-for="arrivalTimeId" class="text-danger"></span>
                </div>
                <div class="form-group m-2">
                    <label asp-for="CustomerName" class="control-label"></label>
                    <input asp-for="CustomerName" class="form-control" placeholder="請輸入訂位人姓名" />
                    <span asp-validation-for="CustomerName" class="text-danger"></span>
                </div>
                <div class="form-group m-2">
                    <label asp-for="Phone" class="control-label"></label>
                    <input asp-for="Phone" class="form-control" placeholder="請輸入連絡電話" />
                    <span asp-validation-for="Phone" class="text-danger"></span>
                </div>
                <div class="form-group m-2">
                    <label asp-for="SeatRequirement" class="control-label"></label>
                    <input asp-for="SeatRequirement" type="number" class="form-control" placeholder="請輸入訂位數" />
                    <span asp-validation-for="SeatRequirement" class="text-danger"></span>
                </div>
                <h5 class="text-danger">@ViewBag.ChildSeatError</h5>
                <div class="form-group m-2">
                    <label asp-for="ChildSeat" class="control-label"></label>
                    <input asp-for="ChildSeat" type="number" class="form-control" placeholder="請輸入兒童座椅需求數" />
                    <span asp-validation-for="ChildSeat" class="text-danger"></span>
                </div>
                <div class="form-group text-center m-4">
                    <input type="submit" value="按我訂位" class="btn btn-primary fw-bold" />
                </div>
            </form>
        </div>
    </div>
}

<div class="m-2" style="text-align:center">
    <a asp-action="Index" class="btn btn-warning mx-2 fw-bold">回首頁</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
